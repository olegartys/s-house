#ifndef SHOUSEDATASTORAGE_IDATASTORAGE_H
#define SHOUSEDATASTORAGE_IDATASTORAGE_H

#include <string>

class IDataStorage {
public:
    IDataStorage()=default;
    ~IDataStorage()=default;
//  Изменение состояния датчика по запросу Пользователя (Пользователь = человек)
    int setStateByUserQuery(std::string userSensorName, std::string newState, int (*onStateChanged)(void),
                                                                              int (*onOldState)(std::string stateIsOld),
                                                                              int (*onError)(std::string errorMsg) );

    int getState(std::string userSensorName, int (*onSuccess)(void), int (*onError)(std::string errorMsg) );
//  Изменения данных в БД по запросу Клиента (Клиент = Одноплатник с датчиками)
    int setStateByClientQuery(std::string systemSensorName, std::string sensorType, int (*onSuccess)(void), int (*onError)(std::string errorMsg) );

    int addSensor();

    int removeSensor();
};


#endif //SHOUSEDATASTORAGE_IDATASTORAGE_H

